<div <%= tag.attributes(@html_options.merge(class: "flex justify-center")) %> >
  <%= render Ui::PanelComponent.new(size: :medium) do |panel| %>
    <%- panel.with_panel_content do %>
      <h1>ログイン</h1>

      <%= render Domain::User::LoginFormComponent.new(
        resource: @resource,
        resource_name: @resource_name,
        login_path: @login_path
      ) %>

      <div class="mt-4">
        <%= button_to "Sign in with Google",
            sns_credential_google_oauth2_omniauth_authorize_path, data: { turbo: false } %>
      </div>
      <% end %>
  <% end %>
</div>
