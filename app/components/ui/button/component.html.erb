<button <%= tag.attributes(@html_options) %>>
  <div class="absolute z-0 inset-0 overflow-hidden isolate backdrop-blur-[2px] rounded-[3rem] transition-all duration-[400ms] ease-[cubic-bezier(0.175,0.885,0.32,2.2)] group-hover:rounded-[4rem] group-disabled:group-hover:rounded-[3rem]">
  </div>
  <div class="absolute z-3 inset-0 flex justify-center items-center <%= text_color_class %>">
    <%= @text %>
  </div>
  <div class="z-1 absolute inset-0 <%= tint_bg_class %> rounded-[3rem] transition-all duration-[400ms] ease-[cubic-bezier(0.175,0.885,0.32,2.2)] group-hover:rounded-[4rem] group-disabled:group-hover:rounded-[3rem]">
  </div>
  <div class="absolute inset-0 z-2 overflow-hidden <%= shadow_class %> rounded-[3rem] transition-all duration-[400ms] ease-[cubic-bezier(0.175,0.885,0.32,2.2)] group-hover:rounded-[4rem] group-disabled:group-hover:rounded-[3rem]">
  </div>
</button>