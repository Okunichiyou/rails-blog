<div class="flex justify-center">
  <%= render Ui::PanelComponent.new(size: :large) do |panel| %>
    <%- panel.with_panel_content do %>
      <h2>記事一覧</h2>

      <% if @posts.empty? %>
        <p class="text-secondary">記事はまだありません</p>
      <% else %>
        <ul class="divide-y divide-default">
          <% @posts.each do |post| %>
            <li class="py-4">
              <article>
                <h3 class="font-weight-heading">
                  <%= link_to post.title, post_path(post), class: "text-link" %>
                </h3>
                <p class="text-secondary text-size-note mt-1">
                  <span>著者: <%= post.user.name %></span>
                  <span class="mx-2">|</span>
                  <span>作成日時: <time datetime="<%= DateFormatPresenter.to_iso8601(post.published_at) %>"><%= DateFormatPresenter.to_long(post.published_at) %></time></span>
                  <span class="mx-2">|</span>
                  <span>更新日時: <time datetime="<%= DateFormatPresenter.to_iso8601(post.updated_at) %>"><%= DateFormatPresenter.to_long(post.updated_at) %></time></span>
                </p>
              </article>
            </li>
          <% end %>
        </ul>
      <% end %>
    <% end %>
  <% end %>
</div>
