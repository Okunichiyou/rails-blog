<div class="flex justify-center gap-4 pb-20 md:pb-0">
  <%# デスクトップ: 左側に固定表示されるいいねボタン %>
  <aside class="hidden md:block sticky top-24 self-start">
    <%= render Domain::Post::LikeButtonComponent.new(post: @post, current_user: current_user, id: "desktop") %>
  </aside>

  <%= render Ui::PanelComponent.new(size: :large) do |panel| %>
    <%- panel.with_panel_content do %>
      <article>
        <header class="mb-6">
          <h1><%= @post.title %></h1>
          <p class="text-secondary text-size-note mt-2 flex flex-col sm:flex-row sm:gap-x-4 gap-y-1">
            <span>著者: <%= @post.user.name %></span>
            <span>閲覧数: <%= @post.view_count %></span>
          </p>
          <p class="text-secondary text-size-note mt-2 flex flex-col sm:flex-row sm:gap-x-4 gap-y-1">
            <span>公開日時: <time datetime="<%= DateFormatPresenter.to_iso8601(@post.first_published_at) %>"><%= DateFormatPresenter.to_long(@post.first_published_at) %></time></span>
            <span>最終更新: <time datetime="<%= DateFormatPresenter.to_iso8601(@post.last_published_at) %>"><%= DateFormatPresenter.to_long(@post.last_published_at) %></time></span>
          </p>
        </header>

        <div class="prose" data-controller="highlight">
          <%= sanitize_tiptap_content(@post.content) %>
        </div>
      </article>
    <% end %>
  <% end %>
</div>

<%# モバイル: 下部に固定表示されるフッター %>
<div class="md:hidden fixed bottom-0 left-0 right-0 bg-surface border-t border-secondary p-3 flex justify-start px-layout">
  <%= render Domain::Post::LikeButtonComponent.new(post: @post, current_user: current_user, id: "mobile") %>
</div>
