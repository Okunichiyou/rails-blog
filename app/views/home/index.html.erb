<h1>Welcome to Rails Blog</h1>

<% if user_signed_in? %>
  <div class="user-info">
    <h2>Logged in as:</h2>
    <p><strong>Name:</strong> <%= current_user.name %></p>
  </div>
  <%= link_to "ログアウト", logout_path, data: { turbo_method: :delete } %>
<% else %>
  <div class="auth-links">
    <%= link_to "ログイン", login_path %>
    <%= link_to "新規登録", new_confirmation_confirmation_path %>
  </div>
<% end %>
